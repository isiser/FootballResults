<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:id="@+id/standingCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="11."
            android:textStyle="bold"
            android:id="@+id/txtStandPosition"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imgStandTeamBadge"
            android:layout_toRightOf="@id/txtStandPosition"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:text="Manchester United"
            android:textAlignment="viewStart"
            android:id="@+id/txtStandTeamName"
            android:layout_toRightOf="@id/imgStandTeamBadge"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="25"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:id="@+id/txtStandW"
            android:layout_toRightOf="@id/txtStandTeamName"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="4"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:id="@+id/txtStandD"
            android:layout_toRightOf="@id/txtStandW"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="10"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:id="@+id/txtStandL"
            android:layout_toRightOf="@id/txtStandD"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="39"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:id="@+id/txtStandTotal"
            android:layout_toRightOf="@id/txtStandL"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>