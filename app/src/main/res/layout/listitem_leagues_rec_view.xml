<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:id="@+id/leagueCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="5dp"
            android:id="@+id/imgLogoLeague"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/txtViewNameLeg"
            android:layout_toRightOf="@+id/imgLogoLeague"
            android:text="1. HNL"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="135dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/txtViewSeasonLeg"
            android:layout_toRightOf="@+id/txtViewNameLeg"
            android:text="2019/2020"
            android:textAlignment="viewEnd"
            android:textSize="11sp"
            android:layout_marginRight="2dp"
            android:textStyle="italic"/>



    </RelativeLayout>


</androidx.cardview.widget.CardView>