<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayersActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/headerColor"
        android:padding="15dp"
        android:id="@+id/headerPlayers">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/football_icon"
            android:id="@+id/iconFootballPlayers"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Football Results"
            android:textSize="25sp"
            android:textColor="@color/backGroundColor"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:id="@+id/NameOfApp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Manchester United"
            android:textColor="@color/backGroundColor"
            android:layout_below="@id/NameOfApp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/nameOfTeam"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerPlayers"
        android:layout_alignParentBottom="true"
        android:id="@+id/popisIgraca">

        <!--<fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="org.vsmti.soliver.footballresults.fragments.LeaguesFragment"
            android:id="@+id/LeaguesFragment"/>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/containerPlayers"/>


    </RelativeLayout>




</RelativeLayout>