<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/headerColor"
        android:padding="15dp"
        android:id="@+id/headerStatistics">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/football_icon"
            android:id="@+id/iconFootballStatistics"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Football Results"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/backGroundColor"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:id="@+id/NameOfApp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textColor="@color/backGroundColor"
            android:layout_below="@id/NameOfApp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/Statistics"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/headerStatistics"
        android:id="@+id/HomevsAway">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/statHomeBadge"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:text="Arsenal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_toRightOf="@id/statHomeBadge"
            android:layout_centerVertical="true"
            android:id="@+id/statHomeName"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/statAwayBadge"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:text="Manchaster United"
            android:layout_toLeftOf="@+id/statAwayBadge"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/statAwayName"
            android:textAlignment="viewEnd"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/HomevsAway"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayStatics">

        <!--<fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="org.vsmti.soliver.footballresults.fragments.LeaguesFragment"
            android:id="@+id/LeaguesFragment"/>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/containerStatistics"/>


    </RelativeLayout>

</RelativeLayout>